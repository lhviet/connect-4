.form-inline.justify-content-end
  .pr-3.d-none.d-sm-inline-block ASCII mode
  button.btn.btn-outline-secondary.btn-sm([class.active]='!isPresentationMode', (click)='onClickPresentMode()')
    i.fa.fa-code
.game-board.my-3
  .game-table
    table.table.table-bordered((mouseleave)='onMouseLeave()')
      thead
        tr
          th.text-center.p-0.bg-transparent.border-0(style='width:0;')
          th.text-center
            .pos-a.text-muted.fs-d8e 0
            i.fa.fa-arrow-down([class.active]='hoveringCol === 0')
          th.text-center
            .pos-a.text-muted.fs-d8e 1
            i.fa.fa-arrow-down([class.active]='hoveringCol === 1')
          th.text-center
            .pos-a.text-muted.fs-d8e 2
            i.fa.fa-arrow-down([class.active]='hoveringCol === 2')
          th.text-center
            .pos-a.text-muted.fs-d8e 3
            i.fa.fa-arrow-down([class.active]='hoveringCol === 3')
          th.text-center
            .pos-a.text-muted.fs-d8e 4
            i.fa.fa-arrow-down([class.active]='hoveringCol === 4')
          th.text-center
            .pos-a.text-muted.fs-d8e 5
            i.fa.fa-arrow-down([class.active]='hoveringCol === 5')
          th.text-center
            .pos-a.text-muted.fs-d8e 6
            i.fa.fa-arrow-down([class.active]='hoveringCol === 6')
      tbody
        tr(*ngFor='let row of gameMatrix; let rowIndex = index;')
          th.text-center.p-0.align-middle.bg-transparent.border-0(style='width:0;') {{rowIndex}}
          td.text-center(*ngFor='let coin of row; let columnIndex = index;',
          [class.win]='winCoinPositions && winCoinPositions.indexOf(coin.position) > -1',
          (click)='onCoinClicked(coin)',
          (mouseenter)='onMouseEnter(columnIndex)')
            app-game-coin(*ngIf='isPresentationMode', style='width: 100%;height:100%;display:block;',
            [coin]='coin',
            [isAvailable]='availablePositionSet.has(coin.position)')
            span(*ngIf='!isPresentationMode', [class.font-weight-bold]='coin.state > 1') {{coin.state}}
